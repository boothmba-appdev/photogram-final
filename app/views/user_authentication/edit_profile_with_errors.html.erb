<div >
  <h5>
    Edit User Account 更改账户信息
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-success alert-dismissable" role="alert">
      <%= message %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="username_box">Username 用户名</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
      </div>

      <div>
        <label for="email_box">Email 邮箱</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>

      <div>
        <label for="password_box">Password 密码</label>
        <input id="password_box" name="query_password" placeholder="Password 密码..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation 密码确认</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirmation 确认..." type="password">
      </div>

      <div>
        <label for="private_box">Private 隐私账户</label>
        <input id="private_box" name="query_private" type="checkbox" <%= "checked" if @current_user.private%>>
      </div>

      <div>
        <label for="comments_count_box">Comments count</label>
        <input id="comments_count_box" name="query_comments_count" value="<%= @current_user.comments_count %>">
      </div>
                      
      <div>
        <label for="likes_count_box">Likes count</label>
        <input id="likes_count_box" name="query_likes_count" value="<%= @current_user.likes_count %>">
      </div>
      
      <button>
        Update account 更新账户
      </button>
    </form>
  </div>
</div>
